{% extends 'base.html.twig' %}

{% block body %}

<div class="container mx-auto">
    <div class="row">        
        <span class=" color_white col-xs-12 col-sm6 col-md-6 mt-5 mx-auto bg-dark border border-primary rounded">
            <p class="ml-5 mt-1 mb-4 ">
                <h4>Profil :</h4>
                <div class="text-center mx-auto">
                    <i class="fas fa-user"></i>  Nom d'utilisateur : {{ r1.username }}  
                </div>    
                <div class="text-center mx-auto ">
                    <i class="fas fa-envelope"></i> Email : {{ r1.email }}
                </div>
                <div class="text-center mx-auto">
                    <i class="{{ r1.getGrade().getPhoto() }}"></i> Grade : {{ r1.getGrade().getNomGrade() }} 
                </div>
                <div class="text-center mx-auto">
                    <i class="fas fa-coins"></i> CrewgnionCoin : {{ r1.getCoin() }} 
                </div>
                <div class="text-center mx-auto">
                    <i class="fas fa-trophy"></i> Experience : {{ r1.getXp() }}
                </div>
                <div class="mt-3">
                    <a href="/user/update/{{app.user.id}}" class="btn btn-warning mb-4 ml-2"><i class="fas fa-edit"></i> Modifier</a>
                    <button class="btn btn-primary mb-4 mr-2 pull-right" type="button" data-toggle="collapse" data-target="#collInventaire" aria-expanded="false" aria-controls="collInventaire">
                        <i class="fas fa-arrow-up"></i> Inventaire
                    </button>
                    
                </div>
            </span>
        </div>        
    </div>
    <div class="collapse mt-4" id="collInventaire">
        <div class="">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Libelle de la quete </th>
                        <th scope="col">RÃ©compense </th>
                        <th scope="col">Prix</th>
                        <th scope="col">Voir objectif sur la map</th>
                    </tr>
                </thead>
                <tbody>
                    {% for quete in quetes %}
                    <tr>
                        <th scope="row">{{ quete.getDescriptifQuete() }}</th>
                        <td>{{ quete.getPointGagne() }} CC</td>
                        <td>{{ quete.getPrix() }} CC</td>
                        <td><a class="btn btn-warning fas fa-map-marked-alt" href="/queteMap/{{ quete.getId() }}"></a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endblock %}