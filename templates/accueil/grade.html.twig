{% extends 'base.html.twig' %}

{% block title %}Grade{% endblock %}

{% block body %}

<div class="container">
    <div class="progress mt-5">
        <div class="progress-bar progress-bar-striped progress-bar-animated font-weight-bold" role="progressbar" aria-valuenow="{{ r1.getXp() }}" aria-valuemin="0" aria-valuemax="{{ r1.getGrade().getPointGrade() }}" style="width: {{ progressbar }}%">{{ r1.getXp() }}/{{ r1.getGrade().getPointGrade() }} Xp </div>
    </div>
    <br/>
    <div class="text-center color_white">
        <h3>Votre grade actuel est : <i class="{{ r1.getGrade().getPhoto() }}"></i> {{ r1.getGrade().getNomGrade() }}</h3>
    </div>
    {% if r1.getXp() > r1.getGrade().getPointGrade() %}   
    <div class="text-center">
        <a href=" /gradeUp/{{app.user.id}}" class="btn btn-primary mt-1">
            <i class="fas fa-arrow-up"></i> Level Up ! 
        </a>
    </div>
    {% endif %}
</div>


{% endblock %}