<title>{% block title %}Inscription{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('build/css/app.css')}}">
    {% endblock %}     

    {% block body %}

        <div class="container">
            {% form_theme form 'bootstrap_4_layout.html.twig' %}            
                <br>
                <br>
            <div class="py-5 text-left bg-light">
                <div class="container">
                    <h1>Inscription</h1>
                    {{ form_start(form) }}
                    {{ form_row(form.username, {'label' : 'Pseudo','attr': {'placeholder': "Pseudo afficher en jeu "}}) }}
                    {{ form_row(form.email, {'label' : 'Email','attr': {'placeholder': "Adresse email "}}) }}             
                    {{ form_row(form.password, {'label' : 'Mot de passe'}) }} 
                    {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe'}) }} 
                    <button type="submit" class="btn btn-success ">S'inscrire</button>
                    {{ form_end(form) }}                        
                </div>
            </div>
        </div>
    {% endblock %}
    {% block javascripts %}{% endblock %}


