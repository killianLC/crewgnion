{% extends 'base.html.twig' %}
{% block title %}Profil{% endblock %}
{% block body %}
<div class="container color_white mx-auto">
    <h3 class="mt-5 mb-4">Modification de votre profil</h3>
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_row(form.username, {'label' : 'Pseudo','attr': {'placeholder': "Pseudo afficher en jeu "}}) }}
        {{ form_row(form.email, {'label' : 'Email','attr': {'placeholder': "Adresse email "}}) }}             
        {{ form_row(form.password, {'label' : 'Mot de passe'}) }} 
        {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe'}) }} 
        <button type="submit" class="btn btn-success ">Modifier</button>
        {{ form_end(form) }}   
</div>


{% endblock %}

