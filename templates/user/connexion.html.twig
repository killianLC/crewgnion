{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('build/css/app.css')}}">
{% endblock %}        
<title>{% block title %}Connexion{% endblock %}</title>  
    {% block body %}
    <div class="col-lg-6 col-lg-offset-3">
    <div class="container"> 
        <div class="jumbotron"> 
            <div class="text-center">
                <h1>Connexion</h1>
            </div>
        <form action="{{path('connexion_login')}}" method="post">
            <div class="form-group">
                <label class="color_grey text-left" for="_username">Identifiant</label>
                <input type="text" class="form-control" name="_username" aria-describedby="emailHelp" placeholder="entrez votre identifiant"> 
            </div>
            <div class="form-group">
                <label class="color_grey text-left"for="_password">Mot de passe</label>
                <input type="password" class="form-control" name="_password" placeholder="entrez votre mot de passe">
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
        </div>
    </div>   
</div>  
{% endblock %}
{% block javascripts %}{% endblock %}

    