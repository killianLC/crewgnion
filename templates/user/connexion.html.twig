{% extends 'baseB.html.twig' %}
{% block title %}Connexion{% endblock %}
    {% block body %}
            <div class="mx-auto my-5">
                    <div class="text-center color_white">
                            <h1>Connexion</h1>
                        </div>
                    <form action="{{path('security_login')}}" method="post">
                        <div class="form-group">
                            <label class="color_white text-left" for="_username">Email</label>
                            <input type="text" class="form-control" name="_username" placeholder="entrez votre email" required> 
                        </div>
                        <div class="form-group">
                            <label class="color_white text-left"for="_password">Mot de passe</label>
                            <input type="password" class="form-control" name="_password" placeholder="entrez votre mot de passe" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </form>
            </div>
        
 
{% endblock %}
{% block javascripts %}{% endblock %}

    